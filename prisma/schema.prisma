generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Device {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String?
  timestamp    DateTime?
  deviceProfile String?
}


model Post {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @map("_user_id") @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
}


model User {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  email String  @unique
  posts post[]
}



